<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/network_error_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="32dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_weight="1"
        android:maxHeight="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/img_network_error"/>

    <com.mathieu.starchars.ui.views.FontTextView
        style="@style/TextAppearance.AppCompat.Title"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/error_network_full_title"
        android:textColor="@android:color/white"
        app:font="Raleway-Bold.ttf"/>

    <com.mathieu.starchars.ui.views.FontTextView
        style="@style/Base.TextAppearance.AppCompat.Medium"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/error_network_full"
        android:textColor="@color/transparent_white"
        app:font="Raleway-Medium.ttf"/>

</LinearLayout>