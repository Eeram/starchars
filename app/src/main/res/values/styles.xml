<resources>

    <!-- Theme -->

    <style name="MainTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/gray_darker</item>
        <item name="colorPrimaryDark">@color/gray_darker_2</item>
        <item name="colorAccent">@color/amber</item>
        <item name="android:windowBackground">@color/gray_darker</item>
    </style>

    <style name="AboutActivity" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/gray_darker</item>
        <item name="colorPrimaryDark">@color/gray_darker_2</item>
        <item name="colorAccent">@color/amber</item>
        <item name="android:windowBackground">@color/gray_darker</item>
    </style>

    <!-- TextViews -->

    <style name="TextView" />

    <style name="TextView.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/very_transparent_white</item>
    </style>

    <style name="TextView.Value">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Value.Circle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/transparent_black</item>
    </style>

    <!-- Buttons -->

    <style name="YellowButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/transparent_black</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/circle_button_amber_selector</item>
    </style>

    <!-- Ripple foreground -->

    <style name="Foreground">
        <item name="android:clickable">true</item>
    </style>

    <style name="Foreground.Dark">
        <item name="android:foreground">@drawable/button_transparent_dark_selector</item>
    </style>

    <style name="Foreground.Light">
        <item name="android:foreground">@drawable/button_transparent_light_selector</item>
    </style>
</resources>
